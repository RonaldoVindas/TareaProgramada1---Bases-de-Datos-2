<body>

  <body style="background-color:#DCD1CA">
    <!-- Side navigation -->
    <div class="sidenav">
      <a href="/myechos"><img src="/views\WebsiteImages\001-loupe.png"> My Echoes</a>
      <a href="#"><img src="/views\WebsiteImages\001-loupe.png"> Search</a>
      <a href="/Profile/<%= email %>"><img src="/views\WebsiteImages\003-user.png"> Profile</a>
      <a href="#"><img src="/views\WebsiteImages\002-high-five.png"> Friends</a>
      <a href="/friend-request"><img src="/views\WebsiteImages\002-network.png"> Friend Requests</a>
