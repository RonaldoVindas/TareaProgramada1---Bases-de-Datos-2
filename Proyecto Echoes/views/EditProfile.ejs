      <a class="btn btn-info" href="/newpost" role="button"><img src="/views\WebsiteImages\more.png" width="25"  height="25">  
        <p>Create a New Echo!</p></a>
        <p></p>
      
    </div>





  <form action="/EditProfile/<%= email%>" method="POST" enctype="multipart/form-data">
    <div class="container mt-4 mb-4 p-3 d-flex justify-content-right">
      <div class="card p-4">
        <div class=" image d-flex flex-column justify-content-center align-items-center">
          <button class="btn btn-secondary"> <img src="<%= photo%>" height="100" width="100"></button>&nbsp;
        </div>
        <div class=" image d-flex flex-column justify-content-center align-items-center">First
          Name:</div>
        <input name="newFirstName" placeholder="New First Name" type="text" value="<%= firstName%>">
        <div class=" image d-flex flex-column justify-content-center align-items-center"><br>
        </div>
        <div class=" image d-flex flex-column justify-content-center align-items-center"><br>
        </div>
        <div class=" image d-flex flex-column justify-content-center align-items-center"><br>
        </div>
        <div class=" image d-flex flex-column justify-content-center align-items-center"><br>
        </div>
        <div class=" image d-flex flex-column justify-content-center align-items-center"><br>
        </div>
        <div class=" image d-flex flex-column justify-content-center align-items-center"><br>
        </div>
        <div class=" image d-flex flex-column justify-content-center align-items-center"><br>
        </div>
        <div class=" image d-flex flex-column justify-content-center align-items-center"><span class="name mt-3">
            Last Name:</span></div>
        <div class=" image d-flex flex-column justify-content-center align-items-center"><span class="name mt-3"><input
              name="newLastName" placeholder="New Last Name" type="text" value="<%= lastName%>"></span><span
            class="idd"></span>
          <div class="d-flex flex-row justify-content-center align-items-center gap-2">
            <span><i class="fa fa-copy"></i></span>
          </div>
          <div class="text mt-3"> <span>Description:</span></div>
          <textarea name="newGeneralDescription"><%= description%></textarea>

          <div class="gap-3 mt-3 icons d-flex flex-row justify-content-center align-items-center">
            <input name="newBirthDay" value="<%= birthDay%>" type="date"></div>
          <div class=" image d-flex flex-column justify-content-center align-items-center">
            <div class="gap-3 mt-3 icons d-flex flex-row justify-content-center align-items-center"></div>
            <span><i class="fa fa-twitter"></i></span> <span><i class="fa fa-facebook-f"></i></span>
            <span><i class="fa fa-instagram"></i></span> <span><i class="fa fa-linkedin"></i></span>
          </div>

          <label for="hobbies">Choose a Hobbie:</label>
          <select name="hobbie" id="hobbies" multiple>
            <% hobbies.name.forEach(function (hobbie) { %>
            <option value="<%= hobbie%>"><%= hobbie%></option>
            <% }) %>
          </select> 



          <p></p>

          <label for="interests">Choose a Interest:</label>
          <select name="interest" id="hobbies" multiple>
            <% interests.name.forEach(function (interest) { %>
            <option value="<%= interest%>"><%= interest%></option>
            <% }) %>
          </select> 

          <p></p>
        </div>
        <div class="form-group"> <button type="submit" class="btn btn-warning btn-block center" name="NewEditProfileButton"
            style="width: 250px;"> Submit Changes! </button>
        </div>
      </div>
    </div>
  </form>
</body>

